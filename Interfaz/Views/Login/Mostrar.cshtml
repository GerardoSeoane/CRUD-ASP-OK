@using Validar
@model List<EntPersona>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mostrar</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Estilos/CSS.css" type="text/css" rel="stylesheet" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row pt-5">
                <div class="col-sm-1 col-md-2 col-lg-2"></div>

                <div class="col-sm-10 col-md-8 col-lg-8 ">
                    <table class="table table-dark table-hover">
                        <tr style="text-align:center">
                            <td>Id</td>
                            <td>Nombre</td>
                            <td>Nacionalidad</td>
                            <td>Fecha Nacimiento</td>
                            <td colspan="2"><a href="/Login/Agregar" class="btn btn-primary btn-block"><i class="fas fa-user-plus"></i></a></td>
                        </tr>

                        @foreach (EntPersona val in Model)
                        {
                            <tr style="text-align:center">
                                <td>@val.Id</td>
                                <td>@val.Nombre</td>
                                <td>@val.Nacionalidad</td>
                                <td>@val.Fecha.ToString().Substring(0, 10)</td>
                                <td><a href="/Login/Editar/@val.Id" class="btn btn-success btn-block"><i class="fas fa-pen"></i></a></td>
                                <td><a href="/Login/Eliminar/@val.Id" class="btn btn-danger btn-block"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        }

                    </table>
                </div>

                <div class="col-sm-1 col-md-2 col-lg-2"></div>

                @if (TempData["Message"] != "")
                {
                    <script>

                        swal({
                            title: "@TempData["Message"].ToString()",
                            text: "CON EXITO",
                            icon: "success",
                            buttons: false,
                            timer: 2000
                        });
                    </script>
                }

                @if (TempData["Message"] != "Insertado" && TempData["Message"] != "Editado" && TempData["Message"] != "Eliminado" && TempData["Message"] != "")
                {
                    <script>

                        swal({
                            title: "@TempData["Message"].ToString()",
                            text: "ERROR",
                            icon: "error",
                            buttons: false,
                            timer: 2000
                        });

                    </script>
                }
            </div>
        </div>
    </div>

</body>
</html>
